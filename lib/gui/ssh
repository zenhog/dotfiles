#!/usr/bin/env bash

KEY=e
MOD='S-M'
ICON=ï’‰

export MUXSOCK="$HOME/.vmux.S"
export SOCKDIR="$HOME/.sockets"
export HOSTDIR="$HOME/.ssh/hosts"

export URL=https://raw.githubusercontent.com/zenhog/dotfiles/master/bin/dotfiles

function view() {
  local host="$(ansifilter "$1")"
  ssh -G "$host" 2>/dev/null
}

function list() {
  local hostfiles
  readarray -t hostfiles < <(cd "$HOSTDIR" && find * -type f)

  for hostfile in "${hostfiles[@]}"; do
    local alias state
    read -r _ alias < <(grep '^Host ' "$HOSTDIR/$hostfile")
    if connected "$alias"; then
      alias="$(ansi --green "$alias")"
    fi
    printf "%s\n" "$alias"
  done | sort
}

function get() {
  local kind="$1" namespace host sock

  IFS=$'/\n' read -r host _ < <(ansifilter <<< "$2")

  [[ "$kind" == host ]] && echo "$host"
  [[ "$kind" == sock ]] && echo "$SOCKDIR/$host.S"
}

function connected() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"

  mute ssh -S "$sock" -O check "$host"
}

BINDS[toggle]=tab
DESCS[toggle]='Toggle ssh master connection'
function toggle() {
  local host="$(get host "$1")"

  if connected "$host"; then
    disconnect "$1"
  else
    connect "$1"
  fi
}

function connect() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"

  if [[ -n "$SSH_CONNECTION" ]] || connected "$host"; then
    return
  fi

  rm -f "$sock"

  timeout 2 ssh -fMNS "$sock" "$host" || exit 1
}

function disconnect() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"

  if connected "$host"; then
    ssh -S "$sock" -O cancel "$host"
    ssh -S "$sock" -O exit   "$host"
  fi
}

function revport() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"

  if connected "$host"; then
    ssh -S "$sock" -O forward -R "localhost:0:$MUXSOCK" "$host"
  fi
}

function cancel() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"

  if connected "$host"; then
    ssh -S "$sock" -O cancel "$host"
  fi
}

BINDS[mux]=enter
HOOKS[mux]=acceptsync
DESCS[mux]='Attach a tmux session'
function mux() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"
  local name="${host%%.*}"

  attach fg "$name" "$host"
}

function attach() {
  local mode="$1"
  local name="$2"
  local host="$3"

  gui tmux mod "$mode" attach remote "$name" "$host"
}

BINDS[shell]='alt-enter'
HOOKS[shell]=acceptsync
DESCS[shell]='Open a new shell window in tmux'
function shell() {
  local host="$(get host "$1")"
  local sock="$(get sock "$1")"
  local name="${host%%.*}"

  if connect "$host"; then
    gui tmux window local "$(hostname)" "$name" \
      ssh -S "$sock" -t "$host" zsh -il
  fi
}

function mount() {
  local host="$(get host "$1")"

  mkdir -p "$HOME/.sshfs/$host"

  sshfs "$host":'$HOME' "$HOME/.sshfs/$host"
}

