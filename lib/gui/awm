#!/usr/bin/env bash

KEY=t
MOD='S-M'
ICON=î¬£
COLOR=yellow

HORIZONTAL=1

NOWRAP=1

OPTS+=(--with-nth 1.. --header-lines=1)
list() {
  local entries

  readarray -s 1 -t entries < <(awm 'list()')

  local n

  (( n = ${#entries[@]} - 1 ))

  printf "%s\n" "${entries[@]:0:$n}" | column -t -s "$iSEP" -N \
    WID,PID,INITAG,PROFILE,CLASS,INSTANCE,NAME
}

view() {
	local wid lines

	read -r wid _ <<< "$1"

  properties @window="$wid" | column -x
}

BINDS[open]=enter
HOOKS[open]=accept
DESCS[open]='Raise window entry'
open() {
	local window

	read -r window _ <<<"$1"
	raise @window="$window"
}

BINDS[close]=alt-d
DESCS[close]='Close window entry'
close() {
	local window

	read -r window _ <<<"$1"
	winkill @window="$window"
}

call() {
  local retval retcode
  local code="$*"

  IFS= read -r -d '' retval < <(awesome-client "$code")

  echo -n "$retval"

  if [[ "$retval" =~ false ]]; then
    return 1
  fi

  return 0
}

awm() {
  local args="$*"

  call "return require('awm').${args}"
}

raise() {
	local lhs conds success

	readarray -t lhs < <(parse lhs "$@")

  local args

  for s in "${lhs[@]}"; do
    args+=($(fmtstr "$s"))
  done

  read -r args < <(IFS=,; printf "%s" "${args[*]}")

  awm "raise($args)"
}

