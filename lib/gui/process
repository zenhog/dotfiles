#!/usr/bin/env bash

KEY=k
MOD='S-M'
ICON=ï’¼

#POSITION=RIGHT
#RATIO=40%
HORIZONTAL=1

view() {
  local pid
  read -r pid _ <<< "$1"

  local fmt=(
    pid ppid sid zone
    pcpu pmem
    user group euser egroup suser sgroup
    fsuser fsgroup
    longtname
    lxc lwp
    cgroup cgname
    mntns netns pidns userns
    sig size slice stat state stime
    args
  )

  local buf

  read -r buf < <(ps -p "$pid" -o "$(IFS=,; echo "${fmt[*]/_/%}")" | tail -n1)
  eval local "${fmt[@]}"
  eval read -r "${fmt[@]}" <<< "$buf"
  for name in "${fmt[@]}"; do
    echo "$name${iSEP}$(eval "echo \$$name")"
  done | column -t -s "$iSEP"
}

OPTS+=(--with-nth 2..)
list() {
  LIBPROC_HIDE_KERNEL=1 ps axo pid,ppid,pidns,userns,user,pmem,cmd --sort pmem |
    tail -n +2 | tac
}

# kill/chgprio/ insert in namespaces?
# htop-style

BINDS[del]=alt-d
HOOKS[del]=noclear
DESCS[del]='Kill process'
del() {
  local pid
  read -r pid _ <<< "$1"
  sudo kill -9 "$pid"
  #sudo kill -9 "$pid"
}

BINDS[reload]=alt-r
DESCS[reload]='Reload List'
reload() {
  :
}
