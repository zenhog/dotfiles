#!/usr/bin/env bash

KEY=space
MOD='S-M'
ICON=ï’‡
COLOR=yellow

POSITION=RIGHT
NOWRAP=1

view() {
	local menu
	read -r menu _ <<<"$1"
	gui "$menu" list
}

list() {
	gui | column -t -s: | sort -k4
}

BINDS[open]=enter
CALLS[open]='become(menu shell {2})'
HOOKS[open]=open
DESCS[open]='Open menu entry'
open() {
	local icon menu
	read -r -d '' icon menu _ <<<"$1"
}
