#!/usr/bin/env bash

KEY=space
MOD='S-M'
ICON=ï’‡

POSITION=RIGHT
NOWRAP=1

function view() {
  local menu
  read -r menu _ <<< "$1"
  gui "$menu" list
}

function list() {
  gui | column -t -s: | sort -k4
}

BINDS[open]=enter
CALLS[open]='become(menu shell {2})'
HOOKS[open]=open
DESCS[open]='Open menu entry'
function open() {
  local icon menu
  read -r -d '' icon menu _ <<< "$1"
}
