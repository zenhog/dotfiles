#!/usr/bin/env bash

mkdir -p "$HOME/.mail/proton"
mkdir -p "$HOME/.mail/mailbox"
mkdir -p "$HOME/.mail/gmail"

if mbsync "${1:--a}"; then
  notmuch search --output=files --format=text0 tag:deleted | xargs -r0 rm

  notmuch new
  notmuch tag --batch --input="$HOME/.config/neomutt/tagmail.notmuch"

  widget mail timeout
fi
