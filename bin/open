#!/usr/bin/env bash

shopt -s nullglob

read -r mime < <(file -bL --mime-type "$1")

browser() {
    [[ -z "$BROWSER" ]] && firefox -p main "$@" || $BROWSER "$@"
}

category="${mime%%/*}"
kind="${mime##*/}"

if [[ "$mime" == inode/directory ]]; then
    if [[ -r "$1/.dirtype" ]]; then
        read -r mime < "$1/.dirtype"
    else
        cd "$1" &&
        exec gui tmux open "window:$(hostname):@:$(basename "$1")"
        #exec gui tmux open "window:$(hostname):@:$(basename "$1")" "$SHELL"
    fi
fi

case "${mime}" in
    text/*)
        gui tmux open "window:$(hostname):@:$(basename "$1")" vim "$1"
        ;;
    image/*)
        awm exec -- sxiv -a -s f -- "$@"
        ;;
    video/*)
        awm exec -- vlc "$@"
        ;;
    application/pdf)
        awm exec -- mupdf "$1"
        ;;
    *)
        case "$1" in
            file://*)
                gui tmux open "window:$(hostname):@:$(basename "$1")" vim "$1"
                ;;
            irc:*)
                ;;
            ircs:*)
                ;;
            mailto:*)
                ;;
            magnet:*)
                aria2p add "$@"
                ;;
            ftp://*)
                browser "$@"
                ;;
            http://*)
                browser "$@"
                ;;
            https://*)
                browser "$@"
                ;;
        esac
esac
