[general]
status_path = "~/.vdirsyncer/status/"

[pair mailbox]
a = "mailboxlocal"
b = "mailboxremote"
collections = [ ["contacts", "contacts", "32"], ["friends", "friends", "51"] ]
conflict_resolution = "a wins"

[storage mailboxlocal]
type = "filesystem"
path = "~/.contacts/mailbox"
fileext = ".vcf"

[storage mailboxremote]
type = "carddav"
url = "https://dav.mailbox.org/carddav"
username.fetch = [ "command", "bash", "-c", "pass show iz/www/mail/mailbox.org/0/davuser" ]
password.fetch = [ "command", "bash", "-c", "pass show iz/www/mail/mailbox.org/0/davpass" ]

[pair disrootpair]
a = "disrootlocal"
b = "disrootremote"
collections = [ "from a", "from b" ]
conflict_resolution = "a wins"

[storage disrootlocal]
type = "filesystem"
path = "~/.contacts/disroot"
fileext = ".vcf"

[storage disrootremote]
type = "carddav"
url = "https://cloud.disroot.org/remote.php/dav/addressbooks/users/prisoner/z-server-generated--system/"
username.fetch = [ "command", "bash", "-c", "pass show iz/www/mail/disroot.org/0/username" ]
password.fetch = [ "command", "bash", "-c", "pass show iz/www/mail/disroot.org/0/password" ]
