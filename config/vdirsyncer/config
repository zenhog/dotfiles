[general]
status_path = "~/.vdirsyncer/status/"

[pair contacts]
a = "localcontacts"
b = "remotecontacts"
collections = [ "from a", "from b" ]
conflict_resolution = "a wins"

[storage localcontacts]
type = "filesystem"
path = "~/.contacts/"
fileext = ".vcf"

[storage remotecontacts]
type = "carddav"
url.fetch = [ "command", "bash", "-c", "pass show www/mail/google.com/davurl" ]
username.fetch = [ "command", "bash", "-c", "pass show www/mail/google.com/username" ]
password.fetch = [ "command", "bash", "-c", "pass show www/mail/google.com/webdav" ]
