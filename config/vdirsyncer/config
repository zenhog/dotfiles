[general]
status_path = "~/.vdirsyncer/status/"

[pair contacts]
a = "localcontacts"
b = "remotecontacts"
collections = [ "from a", "from b" ]
conflict_resolution = ["command", "vimdiff"]

[storage localcontacts]
type = "filesystem"
path = "~/.contacts/"
fileext = ".vcf"

[storage remotecontacts]
type = "carddav"
url = "http://localhost:8080"
username.fetch = [ "command", "bash", "-c", "pass show www/mail/proton.me/username" ]
password.fetch = [ "command", "bash", "-c", "pass show www/mail/proton.me/bridge" ]
