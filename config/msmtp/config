account mailbox
protocol smtp
host smtp.mailbox.org
port 465
auth on
tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
eval "echo -n 'user '; pass show iz/www/mail/mailbox.org/0/username"
eval "echo -n 'from '; pass show iz/www/mail/mailbox.org/0/username"
passwordeval "pass show iz/www/mail/mailbox.org/0/password"

account disroot
protocol smtp
host disroot.org
port 465
auth on
tls on
tls_starttls off
tls_trust_file /etc/ssl/certs/ca-certificates.crt
eval "printf 'user %s@disroot.org' `pass show iz/www/mail/disroot.org/0/email`"
eval "printf 'from %s@disroot.org' `pass show iz/www/mail/disroot.org/0/email`"
passwordeval "pass show iz/www/mail/disroot.org/0/password"
