alternative_order \
  text/calendar   \
  application/ics \
  text/plain      \
  text/enriched   \
  text/html

auto_view       \
  text/*        \
  application/* \
  image/*       \
  audio/*       \
  video/*

set query_command = "( khard email --parsable '%s' | sed -n '1!p'; mu cfind --format=mutt-ab '%s' )"

alternates `pass show www/mail/mailbox.org/username`
alternates `pass show www/mail/google.com/username`
alternates `pass show www/mail/proton.me/username`

unmailboxes *

source config/variables
source config/mailboxes
source config/bindings
source config/theme
source accounts/mailbox
