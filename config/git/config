#[include]
#	path = ~/.config/gitrc
[user]
	signingkey = DF02FBE1D0C2D9F3
[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[hub]
	protocol = https
[commit]
	gpgsign = true
[gpg]
	program = gpg
[color]
	ui = true
[core]
	editor = vim
	autocrlf = input
	pager = delta --dark
	compression = 0
	attributesFile = ~/.config/git/attributes
[init]
	defaultBranch = master
	#templatedir = ~/.config/git/templates
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[interactive]
	diffFilter = delta --dark
[alias]
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	dv = difftool -t vimdiff -y
	plog = log --all --graph --oneline --decorate
	se = !git rev-list --all | xargs git grep -F
	unstage = reset HEAD --
	cleanup = !dot cleanup
	remaster = !dot rebranch
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
[diff]
	colorMoved = default
[diff "less"]
	textconv = less
	binary = true
	cachetextconv = true
[diff "gpg"]
	textconv = gpg --batch -qd /dev/stdin -o -
	binary = true
[diff "gpgtar"]
	textconv = utils dumpsecret
	binary = true
[http]
	postBuffer = 157286400
[pack]
	window = 1
